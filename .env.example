# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_HOURS=24

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
KAFKA_TOPIC_RAW_NEWS=raw-news-feed
KAFKA_TOPIC_NEWS_EN=news-english
KAFKA_TOPIC_NEWS_HI=news-hindi
KAFKA_TOPIC_NEWS_BN=news-bengali

# News Fetcher Configuration
FETCH_INTERVAL_MINUTES=15
MAX_ARTICLES_PER_FEED=10
RETRY_ATTEMPTS=2
RATE_LIMIT_DELAY_SECONDS=2

# Content Scraper Configuration
SCRAPER_TIMEOUT_SECONDS=30
ENABLE_FULL_CONTENT_SCRAPING=true

# Logging
LOG_LEVEL=INFO

# Gemini API (to be added in Phase 3)
# GEMINI_API_KEY=your_api_key_here

# ElevenLabs API (to be added in Phase 4)
# ELEVENLABS_API_KEY=your_api_key_here

# Target Languages
TARGET_LANGUAGES=en,hi,bn