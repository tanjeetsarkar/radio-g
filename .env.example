# ============================================
# Local Development Environment Configuration
# Copy this to .env and fill in your values
# ============================================

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# DEPLOYMENT TARGET
# ============================================
# Options: local, gcp
DEPLOYMENT_TARGET=local

# ============================================
# KAFKA CONFIGURATION (Confluent Cloud)
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
# KAFKA_CREDENTIALS=API_KEY:API_SECRET  # Format: KEY:SECRET
# OR separate:
# KAFKA_USERNAME=your-api-key
# KAFKA_PASSWORD=your-api-secret

# ============================================
# REDIS CONFIGURATION (Memorystore/Local)
# ============================================
REDIS_HOST=localhost  # Internal IP for GCP Memorystore
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Optional, leave empty if no auth
REDIS_SSL=false  # true for production with SSL
REDIS_TTL_HOURS=24

# ============================================
# EXTERNAL APIS (Optional - can use mock)
# ============================================
# Translation Provider: mock or gemini
TRANSLATION_PROVIDER=mock
GEMINI_API_KEY=  # Only needed if TRANSLATION_PROVIDER=gemini

# TTS Provider: mock or elevenlabs
TTS_PROVIDER=mock
ELEVENLABS_API_KEY=  # Only needed if TTS_PROVIDER=elevenlabs


# ===========================================
# FOR VERTEX ONLY
# ===========================================
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_LOCATION=global
GOOGLE_GENAI_USE_VERTEXAI=True

# ============================================
# APPLICATION SETTINGS
# ============================================
AUDIO_OUTPUT_DIR=audio_output
MAX_WORKERS=4
FETCH_INTERVAL_MINUTES=15
ENABLE_DEDUPLICATION=true

# ============================================
# BACKEND API (FastAPI)
# ============================================
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000  # Backend URL

# ============================================
# GCP SPECIFIC (Cloud Run)
# ============================================
# These are automatically set by Cloud Run, no need to configure
# K_SERVICE=news-radio-backend
# K_REVISION=news-radio-backend-00001-abc
# K_CONFIGURATION=news-radio-backend
# PORT=8080  # Cloud Run sets this automatically