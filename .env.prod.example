# ============================================
# Production Environment Configuration
# Copy this to .env.prod and fill in your values
# ============================================

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
ENVIRONMENT=production
LOG_LEVEL=INFO

# ============================================
# DEPLOYMENT TARGET
# ============================================
# Options: local, gcp
DEPLOYMENT_TARGET=gcp

# ============================================
# GCP CONFIGURATION (Required for GCP deployment)
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# ============================================
# API KEYS (Required)
# ============================================
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================
# SERVICE PROVIDERS
# ============================================
TRANSLATION_PROVIDER=gemini
TTS_PROVIDER=elevenlabs

# ============================================
# REDIS CONFIGURATION
# ============================================
# For GCP: Use Memorystore details
REDIS_HOST=your-redis-host-from-gcp
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true
REDIS_DB=0
REDIS_TTL_HOURS=24

# ============================================
# KAFKA CONFIGURATION
# ============================================
# For Confluent Cloud:
KAFKA_BOOTSTRAP_SERVERS=pkc-xxx.region.provider.confluent.cloud:9092
KAFKA_API_KEY=your_kafka_api_key
KAFKA_API_SECRET=your_kafka_api_secret

# Credentials format (API_KEY:API_SECRET)
KAFKA_CREDENTIALS=${KAFKA_API_KEY}:${KAFKA_API_SECRET}

# ============================================
# APPLICATION SETTINGS
# ============================================
FETCH_INTERVAL_MINUTES=15
MAX_WORKERS=4
ENABLE_DEDUPLICATION=true
AUDIO_OUTPUT_DIR=/app/audio_output

# ============================================
# API SETTINGS
# ============================================
PORT=8080
# Update with your production domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# FRONTEND SETTINGS
# ============================================
# Will be set to Cloud Run URL after API deployment
NEXT_PUBLIC_API_URL=https://news-api-${GCP_PROJECT_ID}.${GCP_REGION}.run.app

# ============================================
# CLOUD RUN SETTINGS
# ============================================
# API Service
API_MIN_INSTANCES=1
API_MAX_INSTANCES=10
API_MEMORY=1Gi
API_CPU=1

# Processor Service
PROCESSOR_MIN_INSTANCES=1
PROCESSOR_MAX_INSTANCES=10
PROCESSOR_MEMORY=2Gi
PROCESSOR_CPU=2

# Frontend Service
FRONTEND_MIN_INSTANCES=0
FRONTEND_MAX_INSTANCES=5
FRONTEND_MEMORY=512Mi
FRONTEND_CPU=1

# Fetcher Job
FETCHER_MEMORY=512Mi
FETCHER_CPU=1
FETCHER_TIMEOUT=15m
